{% extends 'base.html.twig' %}

{% block title %}Edit Match - Match Center{% endblock %}

{% block body %}
<style>
/* =========================
   GLOBAL THEME
=========================*/
:root {
    --bg: #020617;
    --text: #e2e8f0;
    --muted: #94a3b8;
    --primary: #3b82f6;
    --card: rgba(15, 23, 42, 0.6);
    --border: rgba(255, 255, 255, 0.08);
}

body {
    background: radial-gradient(circle at top, #0f172a, #020617);
    color: var(--text);
    font-family: 'Segoe UI', system-ui, sans-serif;
    min-height: 100vh;
}

.page-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 60px 20px;
}

.page-header {
    text-align: center;
    margin-bottom: 50px;
}

.page-title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 900;
    letter-spacing: -1px;
    background: linear-gradient(to right, #fff, #94a3b8);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    margin-bottom: 10px;
}

.page-subtitle {
    color: var(--muted);
    font-size: 1.1rem;
}

/* Danger Zone */
.danger-zone {
    margin-top: 50px;
    padding-top: 40px;
    border-top: 1px dashed rgba(239, 68, 68, 0.3);
}

.danger-title {
    font-size: 1.2rem;
    font-weight: 700;
    color: #ef4444;
    margin-bottom: 20px;
    display: flex;
    align-items: center;
    gap: 10px;
}
</style>

<div class="page-container">
    
    <div class="page-header">
        <h1 class="page-title">Edit Match</h1>
        <p class="page-subtitle">Update match details and scores</p>
    </div>

    <!-- Main Form -->
    {{ include('match_game/_form.html.twig', {'button_label': 'Update Match'}) }}

    <!-- Danger Zone -->
    <div class="danger-zone">
        <div class="danger-title">
            <i class="fas fa-exclamation-triangle"></i> Danger Zone
        </div>
        {{ include('match_game/_delete_form.html.twig') }}
    </div>

</div>
{% endblock %}
